@model TravelExperts.Models.SearchViewModel

@{
    ViewData["Title"] = " | Manage Packages";
}

<h1 class="mb-2">Manage Packages</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a Package</a></h5>
    </li>

    


    <li class="list-group-item">
        <form asp-action="Search" method="post" class="form-inline">
            <h5 class="mt-1 mr-5">Find a Package</h5>
            <label>Search Term:</label>
            <input type="text" asp-for="SearchTerm" class="form-control ml-2 mr-2">
            Menage:
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="Package" checked>Packages
            </label>
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="author">Description
            </label>
    <label class="radio-inline">
            <input type="radio" class="form-control ml-2 mr-2"
                   asp-for="Type" value="genre">Agencies
        </label>
    <button type="submit" class="btn btn-primary ml-2 mr-2">Manage</button>
            <span asp-validation-for="SearchTerm" class="text-danger"></span>
        </form>
    </li>
</ul>