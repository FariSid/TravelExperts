@model List<Package>
@{
    ViewData["Title"] = "Package list";
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p> </p>

<h1 class="mb-2">Package List</h1>
<h5 class="mt-1"><a asp-action="Add" class="btn btn-primary">Add a Package</a></h5>

<div class="text-center">

    <table class="table table-bordered table-striped table-md">
        <thead>
            <tr>
                <th scope="col">PackageId</th>
                <th scope="col">Pkg Name</th>
                <th scope="col">Pkg Start Date</th>
                <th scope="col">Pkg End Date</th>
                <th scope="col">Pkg Desc.</th>
                <th scope="col">Pkg Base Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model)
            {
                <tr>
                    <td>@package.PackageId</td>
                    <td>@package.PkgName</td>
                    <td>@package.PkgStartDate</td>
                    <td>@package.PkgEndDate</td>
                    <td>@package.PkgDesc</td>
                    <td>@package.PkgBasePrice</td>
                    <td>@package.PkgAgencyCommission</td>
                    <td>
                        <a asp-controller="Package" asp-action="Edit"
                           asp-route-id="@package.PackageId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Package" asp-action="Delete"
                           asp-route-id="@package.PackageId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @*<h5 class="mt-1"><a asp-action="Add" class="btn btn-primary">Add a Package</a></h5>*@
</div>